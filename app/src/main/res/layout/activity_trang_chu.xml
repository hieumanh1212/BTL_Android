    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idbarchart"
        android:layout_width="400dp"
        android:layout_height="268dp"
        android:layout_marginVertical="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:ignore="MissingConstraints" />

    <ImageView
            android:id="@+id/ThongKe"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="636dp"
            app:layout_constraintStart_toEndOf="@+id/TaoGiaoDich"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_pie_chart_24"
            tools:srcCompat="@drawable/ic_baseline_pie_chart_24" />

        <ImageView
            android:id="@+id/TrangChu"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="636dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_home_24"
            tools:srcCompat="@drawable/ic_baseline_home_24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="624dp"
        android:background="#000000"
        android:backgroundTint="@color/Orange"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/LichSuGiaoDich"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="636dp"
        app:layout_constraintStart_toEndOf="@+id/TrangChu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_attach_money_24"
        tools:srcCompat="@drawable/ic_baseline_attach_money_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/TaoGiaoDich"
        android:layout_width="83dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="584dp"
        android:clickable="true"
        app:backgroundTint="@color/Orange"
        app:fabCustomSize="80dp"
        app:layout_constraintStart_toEndOf="@+id/LichSuGiaoDich"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

        <ImageView
            android:id="@+id/DanhMuc"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:layout_marginTop="636dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toEndOf="@+id/ThongKe"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_grid_view_24"
            tools:srcCompat="@drawable/ic_baseline_grid_view_24" />

        <EditText
            android:id="@+id/edTongSoDu"
            android:layout_width="317dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:editable="false"
            android:focusable="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Tổng số dư:"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:text="Ví của tôi"
        android:textColor="@color/Orange"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Giao dịch gần nhất"
        android:textColor="@color/Orange"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idbarchart" />

    <TextView
        android:id="@+id/tvDanhMucGanNhat"
        android:layout_width="204dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Lương"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/tvTienGanNhat"
        android:layout_width="118dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:text="+3,000,000"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toEndOf="@+id/tvDanhMucGanNhat"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/tvThoiGianGanNhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Thứ hai, ngày 12 tháng 12 năm 2222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDanhMucGanNhat" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tiền đã chi"
        android:textColor="@color/Orange"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTongSoDu" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:text="Tháng trước"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idbarchart" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:text="Tháng này"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/idbarchart" />

</androidx.constraintlayout.widget.ConstraintLayout>
