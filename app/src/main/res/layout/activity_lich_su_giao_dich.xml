<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_btn_Home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/Orange">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#000000"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView_BaoCao"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ThongKe"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="636dp"
        app:layout_constraintStart_toEndOf="@+id/TaoGiaoDich"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_pie_chart_24"
        tools:srcCompat="@drawable/ic_baseline_pie_chart_24" />

    <ImageView
        android:id="@+id/TrangChu"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="636dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_24"
        tools:srcCompat="@drawable/ic_baseline_home_24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="624dp"
        android:background="#000000"
        android:backgroundTint="@color/Orange"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/LichSuGiaoDich"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="636dp"
        app:layout_constraintStart_toEndOf="@+id/TrangChu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_attach_money_24"
        tools:srcCompat="@drawable/ic_baseline_attach_money_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/TaoGiaoDich"
        android:layout_width="83dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="600dp"
        android:clickable="true"
        app:backgroundTint="@color/Orange"
        app:fabCustomSize="80dp"
        app:layout_constraintStart_toEndOf="@+id/LichSuGiaoDich"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/DanhMuc"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginTop="636dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toEndOf="@+id/ThongKe"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_grid_view_24"
        tools:srcCompat="@drawable/ic_baseline_grid_view_24" />

    <TextView
        android:id="@+id/id_textView_Nam"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Năm"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_textView_BaoCao"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Báo cáo lịch sử"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_Spinner_Thang" />

    <TextView
        android:id="@+id/id_textView_Thang"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="Tháng"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/id_Spinner_Thang"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:isScrollContainer="true"


        android:spinnerMode="dialog"
        app:guidelineUseRtl="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView_Thang" />

    <ListView
        android:id="@+id/id_ListView_BaoCao"
        android:layout_width="398dp"
        android:layout_height="348dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Spinner
        android:id="@+id/id_Spinner_Nam"
        android:layout_width="137dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:isScrollContainer="true"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView_Nam" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thu nhập"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiêu"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/id_textview_NhanTongThuChi"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng tiền"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/id_textview_Thu"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Thu"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/id_textview_Chi"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Chi"
                android:textAlignment="center"
                android:textColor="#E91E63"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/id_textView_TongThuChi"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tổng"
                android:textAlignment="center"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
